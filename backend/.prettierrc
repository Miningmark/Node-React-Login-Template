{
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "arrowParens": "always",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "quoteProps": "as-needed",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": ["*.json", "*.yml", "*.yaml"],
            "options": { "tabWidth": 2 }
        },
        {
            "files": ["*.md"],
            "options": { "proseWrap": "preserve" }
        }
    ]
}
